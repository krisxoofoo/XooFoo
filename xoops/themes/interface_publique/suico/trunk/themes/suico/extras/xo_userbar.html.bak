<link rel="stylesheet" type="text/css" media="screen" href="<{xoImgUrl css/userbar.css}>" />
<div id="xo-userbar">
	<{if !$xoops_isuser}>
		<!-- menu in anonymous mode-->
		<a class="register" href="javascript:XoShowDiv('marcello');"><{$smarty.const._LOGIN}></a>&nbsp;|&nbsp;<a href="<{xoAppUrl /register.php}>" class="register" title="<{$smarty.const.THEME_REGISTER}>"><{$smarty.const.THEME_REGISTER}></a>
	<{else}>
    <!-- for my message box  -->
	<{xoInboxCount assign=pmcount}>
	<a href="<{xoAppUrl viewpmsg.php}>" title="">
		<{if $pmcount}>
			<!-- if I have messages -->
			<img class="xo-icons" src="<{xoImgUrl icons/users/email_open.png}>" alt="(<{$pmcount}>) <{$smarty.const.THEME_NOTREAD}>" title="(<{$pmcount}>) <{$smarty.const.THEME_NOTREAD}>"/>
		<{else}>
			<!-- if I do not have a message -->
			<img class="xo-icons" src="<{xoImgUrl icons/users/email.png}>" alt="<{$smarty.const.THEME_MESSAGE}>" title="<{$smarty.const.THEME_MESSAGE}>"/>
		<{/if}>
	</a>
	<!-- end my message box-->
	<a href="<{xoAppUrl /notifications.php}>" title="<{$smarty.const.THEME_NOTIFICATION}>"><img class="xo-icons" src="<{xoImgUrl icons/users/note_edit.png}>" alt="<{$smarty.const.THEME_NOTIFICATION}>"/></a>
	<a href="<{xoAppUrl /user.php}>" title="<{$smarty.const.THEME_MYACCOUNT}>"><img class="xo-icons" src="<{xoImgUrl icons/users/vcard_edit.png}>" alt="<{$smarty.const.THEME_MYACCOUNT}>"/></a>
	<!--<a href="<{xoAppUrl /search.php}>" title="<{$smarty.const.THEME_DESC_SEARCH}>"><img class="xo-icons" src="<{xoImgUrl icons/users/find.png}>" alt="<{$smarty.const.THEME_DESC_SEARCH}>" /></a>-->
	<!-- additional link if I have rights of administration of module -->
	<{if $xoops_isadmin}>
		<a href="<{xoAppUrl /admin.php}>" title="<{$smarty.const._CPHOME}>"><img class="xo-icons" src="<{xoImgUrl icons/users/cog_go.png}>" alt="<{$smarty.const._CPHOME}>" /></a>
	<{/if}>
	<!-- end additional link-->
	<a href="<{xoAppUrl /user.php op=logout}>" title="<{$smarty.const._LOGOUT}>"><img class="xo-icons" src="<{xoImgUrl icons/users/exit.png}>" alt="<{$smarty.const._LOGOUT}>"/></a>
<{/if}>
</div>

<!-- Login Popup-->
<div id="marcello" class="xo-hideshow" style="visibility:hidden;">
		<div id="xo-fade"></div>
		<div class="xo-popup_block">
			<div class="xo-popup">
				<a href="javascript:XoHideDiv('marcello');"><img src="<{xoImgUrl img/icon_close.png}>" class="cntrl" title="<{$smarty.const.THEME_CLOSEPOPUP}>" /></a>
				<fieldset>
					<legend><{$smarty.const._LOGIN}></legend>	
					<form action="<{xoAppUrl /user.php op=login}>" method="post" class="login_form">
						<div class="credentials">
							<label for="login_form-login"><{$smarty.const.THEME_PSEUDO}> :</label><input type="text" name="uname" title="<{$smarty.const.THEME_DESC_PSEUDO}>"/><br />
							<label for="login_form-password"><{$smarty.const.THEME_PASSWORD}> :</label><input type="password" name="pass" title="<{$smarty.const.THEME_DESC_PASSWORD}>" />
							<div class="actions"><input type="checkbox" name="rememberme" value="On" checked /> <{$smarty.const.THEME_REMEMBER}></div>
							<input type="hidden" name="xoops_redirect" value="<{$smarty.server.REQUEST_URI}>" />
							<input type="hidden" name="op" value="login" />
						</div>
							<div class="center"><input class="xo-formbuttons" type="submit" value="<{$smarty.const.THEME_CONNECT}>" title="<{$smarty.const.THEME_CONNECT}>"/></div>
					</form>
				</fieldset>
				<div class="center">
					<a href="<{xoAppUrl user.php#lost}>"><{$smarty.const.THEME_LOSTACCOUNT}></a>
					<br />
					<a href="<{xoAppUrl register.php}>"><{$smarty.const.THEME_REGISTER}></a>
				</div>
			</div>
		</div>
</div>
<!-- End Login Popup-->